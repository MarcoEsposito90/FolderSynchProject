<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>

  <system.serviceModel>

    <!-- ******************************************************************* -->
    <!-- ****************************** bindings *************************** -->
    <!-- ******************************************************************* -->

    <bindings>
      
      <netTcpBinding>

        <!-- setting max size to 1 GB -->
        <binding name="binding1"> 
          <security mode="None"/>
        </binding>

        <binding name="streamBinding"
                 transferMode="Streamed">
          <security mode="None"/>
        </binding>
        
      </netTcpBinding>

      
    </bindings>

    
    <!-- ******************************************************************* -->
    <!-- ****************************** behaviors ************************** -->
    <!-- ******************************************************************* -->

    <behaviors>
      <serviceBehaviors>

        <!-- enable metadata requests -->
        <behavior name="enableMetadata">
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
          
      </serviceBehaviors>
    </behaviors>
    
    
    
    <!-- ******************************************************************* -->
    <!-- ****************************** services *************************** -->
    <!-- ******************************************************************* -->

    <services>
      <service behaviorConfiguration="enableMetadata" name="ServicesProject.FolderSynchImplementation">
        <endpoint address="FolderSynchService" binding="netTcpBinding"
          bindingConfiguration="binding1" name="serviceTcpEndpoint" contract="ServicesProject.FolderSynchServiceContract" />
        <endpoint address="Metadata" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/" />
            <add baseAddress="net.tcp://localhost:8090/" />
          </baseAddresses>
        </host>
      </service>
      <service behaviorConfiguration="enableMetadata" name="ServicesProject.StreamedTransferImplementation">
        <endpoint address="StreamedTransferService" binding="netTcpBinding"
          bindingConfiguration="streamBinding" name="serviceStreamEndpoint"
          contract="ServicesProject.StreamedTransferContract" />
        <endpoint address="Metadata" binding="mexHttpBinding" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8081/" />
            <add baseAddress="net.tcp://localhost:8091/" />
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
  
</configuration>
<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
  </startup>

  <system.serviceModel>

    <!-- ******************************************************************* -->
    <!-- ****************************** bindings *************************** -->
    <!-- ******************************************************************* -->

    <bindings>
      
      <netTcpBinding>

        <binding name = "binding1">
          <security mode="None"/>
        </binding>
        
      </netTcpBinding>
      
      
    </bindings>

    
    <!-- ******************************************************************* -->
    <!-- ****************************** behaviors ************************** -->
    <!-- ******************************************************************* -->

    <behaviors>
      <serviceBehaviors>

        <!-- enable metadata requests -->
        <behavior name="enableMetadata">
          <serviceMetadata httpsGetEnabled="true"/>
        </behavior>
          
      </serviceBehaviors>
    </behaviors>
    
    
    
    <!-- ******************************************************************* -->
    <!-- ****************************** services *************************** -->
    <!-- ******************************************************************* -->

    <services>

      <service name="FolderSynchService.FolderSynchService"
               behaviorConfiguration="enableMetadata">

        <!-- ////////////////// endpoints ///////////////////////////// -->

        <!-- endpoint 1 for service -->
        <endpoint address="FolderSynchService"
                  contract ="FolderSynchService.IFolderSynchService"
                  binding="mexTcpBinding"
                  bindingConfiguration="binding1"/>
        
        <!-- endpoint 2 for metadata -->
        <endpoint address="Metadata"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange"/>

        
        <!-- ////////////////// base addresses /////////////////////// -->
        
        <host>
          <baseAddresses>

            <!-- base address for http -->
            <add baseAddress="http://localhost:8000/"/>
            
            <!-- base address for tcp -->
            <add baseAddress="net.tcp://localhost:8001/"/>
            
          </baseAddresses>
        </host>
        
        
        
      </service>
      
      
      
      
    </services>
  </system.serviceModel>
  
</configuration>
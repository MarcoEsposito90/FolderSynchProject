                                <ItemsControl Name="folderEditDates">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!--TODO - Lista dei possibili file da scaricare-->
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>

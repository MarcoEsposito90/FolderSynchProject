<UserControl x:Class="FolderSynchMUIClient.Pages.TabOptionsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Grid Style="{StaticResource ContentRoot}"  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Auto refresh days: " HorizontalAlignment="Left" 
                           Grid.Column="0" Grid.Row="0" 
                           VerticalAlignment="Center" Margin="10,10,10,10"/>
                <StackPanel Orientation="Horizontal"  Grid.Column="1" Grid.Row="0" >
                    <TextBox x:Name="txtNum" Margin="5,5,0,5" Width="50" Text="{Binding Path=service:Folder, ElementName=AutoRefreshTime}" TextChanged="txtNum_TextChanged" />
                    <Button x:Name="cmdUp" Margin="5,5,0,5" Content="˄" Width="20" Click="cmdUp_Click" />
                    <Button x:Name="cmdDown" Margin="0,5,0,5"  Content="˅" Width="20" Click="cmdDown_Click" />
                </StackPanel>


            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

<UserControl x:Class="FolderSynchMUIClient.Pages.TabOptionsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <Grid Style="{StaticResource ContentRoot}"  ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.3*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Auto refresh hours: " HorizontalAlignment="Left" 
                           Grid.Column="0" Grid.Row="0" 
                           VerticalAlignment="Center" Margin="10,10,10,10"/>
                <Button x:Name="autoRefreshUp"  
                        Grid.Column="1" Grid.Row="0"
                        Content="˄" Click="autoRefreshUp_Click" 
                        Margin="5,10,5,10"/>
                <TextBlock x:Name="txtAutoRefresh" 
                           Grid.Column="2" Grid.Row="0"
                           Text="{Binding AutoRefreshTime}" 
                           Background="White"
                           TextAlignment="Center"
                           Margin="5,10,5,10"/>
                <Button x:Name="autoRefreshDown" 
                        Grid.Column="3" Grid.Row="0"
                        Content="˅" Click="autoRefreshDown_Click"
                        Margin="5,10,5,10"/>

                <TextBlock Text="Auto delete days: " HorizontalAlignment="Left" 
                           Grid.Column="0" Grid.Row="1" 
                           VerticalAlignment="Center" Margin="10,10,10,10"/>
                <Button x:Name="autoDeleteUp"  
                        Grid.Column="1" Grid.Row="1"
                        Content="˄" Click="autoDeleteUp_Click" 
                        Margin="5,10,5,10"/>
                <TextBlock x:Name="txtAutoDelete" 
                           Grid.Column="2" Grid.Row="1"
                           Text="{Binding AutoDeleteTime}" 
                           Background="White"
                           TextAlignment="Center"
                           Margin="5,10,5,10"/>
                <Button x:Name="autoDeleteDown" 
                        Grid.Column="3" Grid.Row="1"
                        Content="˅" Click="autoDeleteDown_Click"
                        Margin="5,10,5,10"/>

                <Button Name="btnSaveChanges"
                        Grid.Row="2" Grid.ColumnSpan="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="Save changes"
                        Click="btnSaveChanges_Click"
                        />

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>

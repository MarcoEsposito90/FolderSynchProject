<mui:ModernDialog x:Class="FolderSynchMUIClient.DetailsDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Title="Details">

    <Grid  Style="{StaticResource ContentRoot}">
        <mui:ModernTab Name="tabDetails"
            Layout="Tab" SelectedSource="/Pages/Dialogs/DetailsDialogInfo.xaml" Margin="0,10,0,0">
        <mui:ModernTab.Links>
            <mui:Link DisplayName="Info" Source="/Pages/Dialogs/DetailsDialogInfo.xaml" />
            <mui:Link DisplayName="History" Source="/Pages/Dialogs/DetailsDialogHistory.xaml" />
        </mui:ModernTab.Links>
    </mui:ModernTab>

</Grid>
</mui:ModernDialog>

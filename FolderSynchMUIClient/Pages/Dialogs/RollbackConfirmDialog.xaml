<mui:ModernDialog x:Class="FolderSynchMUIClient.RollbackConfirmDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Title="ModernDialog"
                  ContentRendered="ModernDialog_ContentRendered">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->


    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Text="Are you sure?" Margin="10"
                   FontSize="18.667" Grid.Row="0"
                   Foreground="{DynamicResource ItemBackgroundSelected}"
                   VerticalAlignment="Center" FontFamily="Segoe UI Light" />
        <!-- END TITLE -->

        <TextBox Name="warningMessageTB"
                 Grid.Row="1"
                 Margin="10,10,0,0"/>


    </Grid>
    
</mui:ModernDialog>

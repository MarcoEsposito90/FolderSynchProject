<mui:ModernDialog x:Class="FolderSynchMUIClient.RollbackDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Title="Rollback">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Choose one rollback option:" Margin="10"
                   FontSize="18.667" Grid.Row="0" Grid.ColumnSpan="3"
                   Foreground="{DynamicResource ItemBackgroundSelected}"
                   VerticalAlignment="Center" FontFamily="Segoe UI Light" />

        <mui:ModernButton Name="btnDeleteOld"
                  Grid.Column="0" Grid.Row="1" Margin="10, 0, 10, 10"
                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,10"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="Go back to this previous version of the folder and delete the current one."
                   TextWrapping="Wrap"/>

        <mui:ModernButton Name="btnKeepOld"
                  Grid.Column="0" Grid.Row="2" Margin="10, 0, 10, 10"
                  VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,0,10,10"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="Keep the current version of the folder and download the oldest one in the following path:"
                   TextWrapping="Wrap"/>

        <Button Name="btnBrowsePath" Content="Browse"
                VerticalAlignment="Center"  Style="{StaticResource BaseButtonStyle}"
                Click="btnBrowsePath_Click" Margin="10,0,0,0" 
                Grid.Column="1" Grid.Row="3"/>
        <TextBox Name="choosedPathTextBox" IsEnabled="False" 
                 VerticalAlignment="Center" Foreground="Black" 
                 Margin="10,0,10,0" Grid.Column="2" Grid.Row="3"/>

    </Grid>
</mui:ModernDialog>

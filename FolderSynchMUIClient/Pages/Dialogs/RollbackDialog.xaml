<mui:ModernDialog x:Class="FolderSynchMUIClient.RollbackDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  mc:Ignorable="d" 
                  d:DesignHeight="300" d:DesignWidth="300"
                  Title="Rollback">

    <!-- Note: ModernDialog buttons are defined in the constructor of the code behind class -->
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TITLE -->
        <TextBlock Text="Choose one rollback option:" Margin="10"
                   FontSize="18.667" Grid.Row="0" Grid.ColumnSpan="3"
                   Foreground="{DynamicResource ItemBackgroundSelected}"
                   VerticalAlignment="Center" FontFamily="Segoe UI Light" />
        <!-- END TITLE -->

        <!-- FIRST OPTION -->
        <RadioButton Name="btnDeleteOld"
                     Grid.Column="0" Grid.Row="1" Margin="10, 0, 10, 10"
                     VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" 
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   Text="Synchronize this previous version of the folder and delete the current one."
                   TextWrapping="Wrap" Margin="10,0,10,10"/>
        <!-- END FIRST OPTION -->

        <!-- SECOND OPTION -->
        <RadioButton Name="btnKeepOld"
                     Grid.Column="0" Grid.Row="2" Margin="10, 0, 10, 10"
                     VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="2"  Grid.ColumnSpan="2"
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   Text="Synchronize this previous version of the folder and keep a copy of the current one."
                   TextWrapping="Wrap" Margin="10,0,10,10"/>
        <!-- END SECOND OPTION -->

        <!-- THIRD OPTION -->
        <RadioButton Name="btnDownloadOld" Checked="btnDownloadOld_Checked" Unchecked="btnDownloadOld_Unchecked"
                  Grid.Column="0" Grid.Row="3" Margin="10, 0, 10, 10"
                  VerticalAlignment="Center" HorizontalAlignment="Right"/>
        <TextBlock Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="2"
                   VerticalAlignment="Center" HorizontalAlignment="Left"
                   Text="Keep the current folder synchronized and download (without synch) the older folder."
                   TextWrapping="Wrap" Margin="10,0,10,10"/>
        <!-- END THIRD OPTION -->

        <!-- CHOOSE PATH SECTION -->
        <Button Name="btnBrowsePath" Content="Browse"
                Visibility="Hidden"
                VerticalAlignment="Center"  Style="{StaticResource BaseButtonStyle}"
                Click="btnBrowsePath_Click" Margin="10,0,0,0" 
                Grid.Column="1" Grid.Row="4"/>
        <TextBox Name="choosedPathTextBox" IsEnabled="False" 
                 Visibility="Hidden"
                 VerticalAlignment="Center" Foreground="Black" 
                 Margin="10,0,10,0" Grid.Column="2" Grid.Row="4"/>
        <!-- END CHOOSE PATH SECTION -->

    </Grid>
</mui:ModernDialog>

<UserControl x:Class="FolderSynchMUIClient.Pages.HomePages.MyFolders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:local="clr-namespace:FolderSynchMUIClient"
             xmlns:localPages="clr-namespace:FolderSynchMUIClient.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="MY FOLDERS" Style="{StaticResource Heading2}" />
                <StackPanel>
                    <mui:ModernTab>
                        <mui:ModernTab.Links>
                            <mui:Link DisplayName="Details" Source="/Pages/TabDetailsWindow.xaml" />
                            <mui:Link DisplayName="Browse" Source="/Pages/TabBrowseWindow.xaml" />
                            <mui:Link DisplayName="History" Source="/Pages/TabHistoryWindow.xaml" />
                            <mui:Link DisplayName="Options" Source="/Pages/TabOptionsWindow.xaml" />
                        </mui:ModernTab.Links>
                    </mui:ModernTab>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
